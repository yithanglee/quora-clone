<%= @msg %>
<h2>
Recent answers
</h2>

<table class="table">
<!-- headers -->
<tr>
<th>Answers</th>
<th>Posted by</th>
<th>Up Votes</th>
<th>Action</th>
<th>Down Votes</th>
<th>Action</th>
</tr>
<% @current_question.answers.each do |x|%>
<tr>
<td>
<%= x.answer%>
</td>
<td>
<%= x.user.name%>
</td>
<td>
<%= x.answervotes.where(vote_type: 1).count%>
</td>
<td>
<form method="post" action="/questions/<%= x.question.id%>/answers/<%= x.id %>/vote/up">
<input type="submit" value="up vote">
</form>
</td>
<td>
<%= x.answervotes.where(vote_type: 2).count%>
</td>
<td>
<form method="post" action="/questions/<%= x.question.id%>/answers/<%= x.id %>/vote/down">
<input type="submit" value="down vote">
</form>
</td>
</tr>
<% end %>
</table>

